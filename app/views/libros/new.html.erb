<div class="container-fluid">
	<div class="row">
		<div class="col-sm-3 col-md-2 sidebar">
			<ul class="nav nav-sidebar">
				<li class="active"><a href="/libros">Stock Libros</a></li>
				<li><a href='/arriendos'>Arriendo Libros <span class="sr-only">(current)</span></a></li>
				<li><a href="#">Analytics</a></li>
				<li><a href="#">Export</a></li>
			</ul>
		</div>
		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<div class="col-lg-12">
				<h1 class="page-header">New Book</h1>
			</div>
			<div class="table-responsive">
				<%= form_for :libro, :url => { :action => :create } do |f| %>
				<div class="col-lg-6">
					<div class="form-group">
						<%= label_tag 'nombre', 'nombre'%>
						<%= text_field_tag :nombre,params[:nombre], name: 'libro[nombre]', id: 'nombre', class: 'form-control', autofocus: true, required: true %>
					</div>
				</div>
				<div class="col-lg-3">
					<div class="form-group">
						<%= label_tag 'categoria', 'categoria'%>
						<select name="libro[categoria]" id="categoria" class="form-control">
							<option value="Literatura">Literatura</option>
							<option value="Ciencias">Ciencias</option>
							<option value="Programación">Programación</option>
							<option value="Animales">Animales</option>
						</select>
					</div>
				</div>
				<div class="col-lg-3">
					<div class="form-group">
						<%= label_tag 'estado', 'estado'%>
						<select name="libro[estado]" id="estado" class="form-control">
							<option value="Disponible">Disponible</option>
							<option value="Arrendado">Arrendado</option>
							<option value="not">Fuera de Servicio</option>
						</select>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="form-group">
						<%= label_tag 'editorial', 'editorial'%>
						<%= text_field_tag :editorial,params[:editorial], name: 'libro[editorial]', id: 'editorial', class: 'form-control', required: true %>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="form-group">
						<%= label_tag 'autor', 'autor'%>
						<%= text_field_tag :autor,params[:autor], name: 'libro[autor]', id: 'autor', class: 'form-control', required: true %>
					</div>
				</div>
				<div class="col-lg-12">
					<%= f.submit %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>