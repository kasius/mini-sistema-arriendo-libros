		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
				<div class="col-lg-12">
					<h1 class="page-header">Editing Libro</h1>
				</div>
				<div class="table-responsive">
					<%= form_for :libro, url: @libro, method: :patch do |f| %>
					<div class="col-lg-6">
						<div class="form-group">
							<%= label_tag 'nombre', 'nombre'%>
							<%= f.text_field :nombre , name: 'libro[nombre]', id: 'nombre', class: 'form-control', autofocus: true, required: true %>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="form-group">
							<%= label_tag 'categoria', 'categoria'%>
							<select name="libro[categoria]" id="categoria" class="form-control">
								<option value="Literatura">Literatura</option>
								<option value="Ciencias">Ciencias</option>
								<option value="Programación">Programación</option>
								<option value="Animales">Animales</option>
							</select>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="form-group">
							<%= label_tag 'estado', 'estado'%>
							<select name="libro[estado]" id="estado" class="form-control">
								<option value="Disponible">Disponible</option>
								<option value="Arrendado">Arrendado</option>
								<option value="not">Fuera de Servicio</option>
							</select>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="form-group">
							<%= label_tag 'editorial', 'editorial'%>
							<%= f.text_field :editorial , name: 'libro[editorial]', id: 'editorial', class: 'form-control', required: true %>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="form-group">
							<%= label_tag 'autor', 'autor'%>
							<%= f.text_field :autor , name: 'libro[autor]', id: 'autor', class: 'form-control', required: true %>
						</div>
					</div>
					<div class="col-lg-12">
						<%= f.submit %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>